<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@color/colorPrimary"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tvProfile"
            style="@style/TextViewStyle"
            android:text="@string/Profile"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cvImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="106dp"
            android:src="@drawable/profile_icon"
            tools:src="@tools:sample/avatars" />

        <Button
            android:id="@+id/btEdit"
            android:layout_width="@dimen/button_height"
            android:layout_height="@dimen/button_height"
            android:layout_alignRight="@+id/cvImage"
            android:layout_marginRight="-6dp"
            android:layout_alignBottom="@id/cvImage"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="-21dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/draw_back_bt_circle"
            android:text="@string/Edit"
            android:textColor="@color/appColorWhite"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/tvUsername"
            style="@style/TextViewStyle"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="@string/Username"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size"
            tools:text="@tools:sample/first_names" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="280dp"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingLeft="@dimen/app_normal_margin"
        android:paddingRight="@dimen/app_normal_margin">



        <TextView
            android:id="@+id/tvCount"
            style="@style/TextViewStyle"
            android:text="@string/Count"
            android:textSize="@dimen/text_size_large"/>
        <TextView
            android:id="@+id/tvTripsmade"
            style="@style/TextViewStyle"
            android:text="@string/Tripsmade"
            android:textSize="@dimen/text_size_small"
            />

    </LinearLayout>

</RelativeLayout>